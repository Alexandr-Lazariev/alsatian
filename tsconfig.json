{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": [
        "**/*.d.ts",
        "./node_modules/**/*.*"
    ],
    "filesGlob": [
        "./proof-of-concept/**/*.ts",
        "./typings/main.d.ts"
    ],
    "files": [
        "./proof-of-concept/async-test-decorator.ts",
        "./proof-of-concept/example-test.ts",
        "./proof-of-concept/expect.ts",
        "./proof-of-concept/ignore-test-decorator.ts",
        "./proof-of-concept/ignore-tests-decorator.ts",
        "./proof-of-concept/match-error.ts",
        "./proof-of-concept/runner.ts",
        "./proof-of-concept/test-case-decorator.ts",
        "./proof-of-concept/test-decorator.ts",
        "./proof-of-concept/test-fixture.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
