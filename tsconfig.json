{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": [
        "**/*.d.ts",
        "./node_modules/**/*.*"
    ],
    "filesGlob": [
        "./proof-of-concept/**/*.ts",
        "./cli/**/*.ts",
        "./core/**/*.ts",
        "./typings/index.d.ts"
    ],
    "files": [
        "./proof-of-concept/async-test-decorator.ts",
        "./proof-of-concept/errors/contents-match-error.ts",
        "./proof-of-concept/errors/equal-match-error.ts",
        "./proof-of-concept/errors/error-match-error.ts",
        "./proof-of-concept/errors/exact-match-error.ts",
        "./proof-of-concept/errors/function-call-match-error.ts",
        "./proof-of-concept/errors/greater-than-match-error.ts",
        "./proof-of-concept/errors/less-than-match-error.ts",
        "./proof-of-concept/errors/match-error.ts",
        "./proof-of-concept/errors/regex-match-error.ts",
        "./proof-of-concept/errors/truthy-match-error.ts",
        "./proof-of-concept/example-test.ts",
        "./proof-of-concept/expect.ts",
        "./proof-of-concept/focus-test-decorator.ts",
        "./proof-of-concept/focus-tests-decorator.ts",
        "./proof-of-concept/ignore-test-decorator.ts",
        "./proof-of-concept/ignore-tests-decorator.ts",
        "./proof-of-concept/runner.ts",
        "./proof-of-concept/setup-decorator.ts",
        "./proof-of-concept/spying/spy-call.ts",
        "./proof-of-concept/spying/spy-on.ts",
        "./proof-of-concept/teardown-decorator.ts",
        "./proof-of-concept/test-case-decorator.ts",
        "./proof-of-concept/test-decorator.ts",
        "./cli/alsatian-cli.ts",
        "./core/alsatian-core.ts",
        "./core/test-runner.ts",
        "./typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
