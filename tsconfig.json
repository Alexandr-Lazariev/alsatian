{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "buildOnSave": false,
    "compileOnSave": true,
    "exclude": [
        "./core/**/*.d.ts",
        "./cli/**/*.d.ts",
        "./test/**/*.d.ts",
        "./scripts/**/*.d.ts",
        "./test/integration-tests/node**/*.ts",
        "node_modules"
    ],
    "filesGlob": [
        "./cli/**/*.ts",
        "./core/**/*.ts",
        "./test/**/*.ts",
        "./scripts/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
